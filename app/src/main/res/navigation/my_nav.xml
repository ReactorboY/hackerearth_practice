<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.organicpy.loveshayarihindi.imagestatus.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_loveFragment"
            app:destination="@id/loveFragment" />
        <action
            android:id="@+id/action_mainFragment_to_friendshipFragment"
            app:destination="@id/friendshipFragment" />
        <action
            android:id="@+id/action_mainFragment_to_favFragment"
            app:destination="@id/favFragment" />
        <action
            android:id="@+id/action_mainFragment_to_shayariQoutesFragment"
            app:destination="@id/shayariQoutesFragment" />
    </fragment>
    <fragment
        android:id="@+id/loveFragment"
        android:name="com.organicpy.loveshayarihindi.imagestatus.LoveFragment"
        android:label="fragment_love"
        tools:layout="@layout/fragment_love" />
    <fragment
        android:id="@+id/friendshipFragment"
        android:name="com.organicpy.loveshayarihindi.imagestatus.FriendshipFragment"
        android:label="fragment_friendship"
        tools:layout="@layout/fragment_friendship" />
    <fragment
        android:id="@+id/favFragment"
        android:name="com.organicpy.loveshayarihindi.imagestatus.FavFragment"
        android:label="fragment_fav"
        tools:layout="@layout/fragment_fav" />
    <fragment
        android:id="@+id/shayariQoutesFragment"
        android:name="com.organicpy.loveshayarihindi.imagestatus.ShayariQoutesFragment"
        android:label="fragment_shayari_qoutes"
        tools:layout="@layout/fragment_shayari_qoutes" />
</navigation>